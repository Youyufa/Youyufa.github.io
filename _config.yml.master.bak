# Site
title: YOU Yufa
subtitle: Motion Planning, Self-Driving
description: Motion Planning, Self-Driving
author: YOU Yufa
language: en
timezone: Asia/Hong_Kong

# URL
url: https://youyufa.github.io
root: /
permalink: :title/
permalink_defaults:

# Directory
source_dir: source
public_dir: public

# Writing
new_post_name: :title.md
post_asset_folder: false

# Home page is a custom page; move blog index to /blog
index_generator:
  path: blog
  per_page: 10
  order_by: -date

# Theme
theme: redefine

# Render
marked:
  prependRoot: true
  postAsset: false

# Static passthrough
skip_render:
  - "assets/**"
  - "news/**"
